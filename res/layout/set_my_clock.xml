<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="fill_parent"
     android:layout_width="fill_parent"
     android:orientation="vertical"
     android:background="#ededed"
>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="#dddddd"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_set_clock_back_normal"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="设置闹钟"
                android:textSize="18sp"
                android:textColor="#929191"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/btn_confirm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_set_clock_complete_normal"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c0c0c0"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#c0c0c0"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="09"
                    android:gravity="center"/>
            <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#c0c0c0"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
        </LinearLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c0c0c0"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/text_hour"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="06"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#5ad2c0"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:id="@+id/text_min"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:background="#5ad2c0"
                        android:text="10"
                        android:gravity="center"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:id="@+id/text_format"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#5ad2c0"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:text="AM"
                        android:gravity="center"/>
            </LinearLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="07"
                        android:gravity="center"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="11"
                        android:gravity="center"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
            </LinearLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0"/>
    </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="10dp">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView


 android:layout_marginLeft="5dp"                       android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重复:"/>
                    </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0"
                    android:layout_marginTop="10dp"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="周一"
                        android:gravity="center"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周二"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周三"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="周四"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周五"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="周六"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="周日"/>
                <View
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"/>
                    </LinearLayout>
            </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="10dp">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标签:    起床时间"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="10dp">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被叫模式:    随机男"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="10dp">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="闹钟音量"/>
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0"
                    android:layout_marginTop="10dp"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                <ProgressBar android:id="@+id/progress_horizontal"
                             style="?android:attr/progressBarStyleHorizontal"
                             android:layout_width="300dip"
                             android:layout_height="15dp"
                             android:max="100"
                             android:progress="50"/>
            </LinearLayout>
        </LinearLayout>
                </LinearLayout>
</LinearLayout>
